{
  "id": "binary:playwright",
  "kind": "binary",
  "name": "Playwright",
  "version": "latest",

  "delivery": "remote",
  "install": {
    "source": "npm",
    "package": "playwright"
  },

  "bins": ["playwright"],

  "detect": {
    "command": "npx playwright --version",
    "expectExitCode": 0
  },

  "meta": {
    "description": "Browser automation for screenshots, scraping, and testing",
    "category": "utilities"
  }
}
