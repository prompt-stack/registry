{
  "id": "binary:git",
  "kind": "binary",
  "name": "Git",
  "version": "system",

  "delivery": "system",
  "install": {
    "source": "system",
    "platforms": {
      "darwin": { "preinstalled": true },
      "linux": { "preinstalled": true },
      "win32": { "preinstalled": false }
    }
  },

  "bins": ["git"],

  "detect": {
    "command": "git --version",
    "expectExitCode": 0
  },

  "installHints": {
    "brew": "xcode-select --install",
    "apt": "sudo apt install git",
    "manual": "Pre-installed on macOS and most Linux distributions"
  },

  "meta": {
    "description": "Distributed version control system",
    "category": "version-control"
  }
}
