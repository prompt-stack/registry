{
  "id": "binary:docker",
  "kind": "binary",
  "name": "Docker",
  "version": "system",

  "delivery": "system",
  "install": {
    "source": "system"
  },

  "bins": ["docker"],

  "detect": {
    "command": "docker --version",
    "expectExitCode": 0
  },

  "installHints": {
    "brew": "brew install --cask docker",
    "manual": "Download Docker Desktop from https://docker.com/products/docker-desktop"
  },

  "meta": {
    "description": "Container runtime",
    "category": "devops"
  }
}
