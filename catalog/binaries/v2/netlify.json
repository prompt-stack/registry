{
  "id": "binary:netlify",
  "kind": "binary",
  "name": "Netlify CLI",
  "version": "latest",

  "delivery": "remote",
  "install": {
    "source": "npm",
    "package": "netlify-cli"
  },

  "bins": ["netlify", "ntl"],

  "detect": {
    "command": "netlify --version",
    "expectExitCode": 0
  },

  "auth": {
    "required": true,
    "command": "netlify login",
    "instructions": "Run 'netlify login' to authenticate with your Netlify account"
  },

  "meta": {
    "description": "Deploy to Netlify",
    "category": "devops"
  }
}
