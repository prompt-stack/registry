{
  "id": "binary:httpie",
  "kind": "binary",
  "name": "HTTPie",
  "version": "latest",

  "delivery": "remote",
  "install": {
    "source": "pip",
    "package": "httpie"
  },

  "bins": ["http", "https"],

  "detect": {
    "command": "http --version",
    "expectExitCode": 0
  },

  "meta": {
    "description": "Modern HTTP client for API testing",
    "category": "utilities"
  }
}
