{
  "id": "binary:tesseract",
  "kind": "binary",
  "name": "Tesseract OCR",
  "version": "system",

  "delivery": "system",
  "install": {
    "source": "system"
  },

  "bins": ["tesseract"],

  "detect": {
    "command": "tesseract --version",
    "expectExitCode": 0
  },

  "installHints": {
    "brew": "brew install tesseract",
    "apt": "sudo apt install tesseract-ocr",
    "manual": "Install Tesseract OCR from your package manager"
  },

  "meta": {
    "description": "OCR text extraction from images",
    "category": "utilities"
  }
}
