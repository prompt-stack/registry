{
  "id": "binary:wrangler",
  "kind": "binary",
  "name": "Cloudflare Wrangler",
  "version": "latest",

  "delivery": "remote",
  "install": {
    "source": "npm",
    "package": "wrangler"
  },

  "bins": ["wrangler"],

  "detect": {
    "command": "wrangler --version",
    "expectExitCode": 0
  },

  "auth": {
    "required": true,
    "command": "wrangler login",
    "instructions": "Run 'wrangler login' to authenticate with your Cloudflare account"
  },

  "meta": {
    "description": "Deploy to Cloudflare Workers/Pages",
    "category": "devops"
  }
}
