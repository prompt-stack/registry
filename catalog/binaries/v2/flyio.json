{
  "id": "binary:flyio",
  "kind": "binary",
  "name": "Fly.io CLI",
  "version": "latest",

  "delivery": "remote",
  "install": {
    "source": "npm",
    "package": "flyctl"
  },

  "bins": ["flyctl", "fly"],

  "detect": {
    "command": "flyctl version",
    "expectExitCode": 0
  },

  "auth": {
    "required": true,
    "command": "fly auth login",
    "instructions": "Run 'fly auth login' to authenticate with your Fly.io account"
  },

  "meta": {
    "description": "Deploy to Fly.io (edge hosting)",
    "category": "devops"
  }
}
