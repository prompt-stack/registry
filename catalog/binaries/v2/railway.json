{
  "id": "binary:railway",
  "kind": "binary",
  "name": "Railway CLI",
  "version": "latest",

  "delivery": "remote",
  "install": {
    "source": "npm",
    "package": "@railway/cli"
  },

  "bins": ["railway"],

  "detect": {
    "command": "railway --version",
    "expectExitCode": 0
  },

  "auth": {
    "required": true,
    "command": "railway login",
    "instructions": "Run 'railway login' to authenticate with your Railway account"
  },

  "meta": {
    "description": "Deploy to Railway (simple cloud hosting)",
    "category": "devops"
  }
}
