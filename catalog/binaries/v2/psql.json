{
  "id": "binary:psql",
  "kind": "binary",
  "name": "PostgreSQL Client",
  "version": "system",

  "delivery": "system",
  "install": {
    "source": "system"
  },

  "bins": ["psql"],

  "detect": {
    "command": "psql --version",
    "expectExitCode": 0
  },

  "installHints": {
    "brew": "brew install libpq && brew link libpq --force",
    "apt": "sudo apt install postgresql-client",
    "manual": "Install PostgreSQL client tools"
  },

  "meta": {
    "description": "PostgreSQL client for database connections",
    "category": "database"
  }
}
