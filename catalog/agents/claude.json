{
  "id": "claude",
  "name": "Claude Code",
  "version": "latest",
  "description": "Anthropic Claude Code CLI",
  "bundled": false,
  "installType": "native-installer",
  "nativeInstaller": {
    "darwin": "curl -fsSL https://claude.ai/install.sh | sh",
    "linux": "curl -fsSL https://claude.ai/install.sh | sh",
    "win32": "irm https://claude.ai/install.ps1 | iex"
  },
  "nativeBinPath": ".local/bin/claude",
  "commands": [{ "name": "claude", "bin": "claude" }],
  "requiresAuth": true,
  "authInstructions": "Run 'claude login' to authenticate with your Anthropic account"
}
