{
  "id": "agent:claude",
  "kind": "agent",
  "name": "Claude Code",
  "version": "latest",

  "delivery": "remote",
  "install": {
    "source": "native-installer",
    "nativeInstaller": {
      "darwin": "curl -fsSL https://claude.ai/install.sh | sh",
      "linux": "curl -fsSL https://claude.ai/install.sh | sh",
      "win32": "irm https://claude.ai/install.ps1 | iex"
    },
    "nativeBinPath": ".local/bin/claude"
  },

  "bins": ["claude"],

  "detect": {
    "command": "claude --version",
    "expectExitCode": 0
  },

  "auth": {
    "required": true,
    "command": "claude login",
    "instructions": "Run 'claude login' to authenticate with your Anthropic account"
  },

  "meta": {
    "description": "Anthropic Claude Code CLI - AI coding assistant",
    "category": "ai-assistant",
    "homepage": "https://claude.ai"
  }
}
