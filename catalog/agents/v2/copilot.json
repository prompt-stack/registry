{
  "id": "agent:copilot",
  "kind": "agent",
  "name": "GitHub Copilot",
  "version": "latest",

  "delivery": "remote",
  "install": {
    "source": "npm",
    "package": "@githubnext/github-copilot-cli"
  },

  "bins": ["copilot", "github-copilot-cli"],

  "detect": {
    "command": "github-copilot-cli --version",
    "expectExitCode": 0
  },

  "auth": {
    "required": true,
    "command": "github-copilot-cli auth",
    "instructions": "Run 'github-copilot-cli auth' to authenticate with GitHub"
  },

  "meta": {
    "description": "GitHub Copilot CLI - AI coding assistant",
    "category": "ai-assistant",
    "homepage": "https://github.com/features/copilot"
  }
}
