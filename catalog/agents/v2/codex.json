{
  "id": "agent:codex",
  "kind": "agent",
  "name": "OpenAI Codex",
  "version": "latest",

  "delivery": "remote",
  "install": {
    "source": "npm",
    "package": "@openai/codex"
  },

  "bins": ["codex"],

  "detect": {
    "command": "codex --version",
    "expectExitCode": 0
  },

  "auth": {
    "required": true,
    "command": "codex auth",
    "instructions": "Run 'codex auth' to authenticate with your OpenAI account"
  },

  "meta": {
    "description": "OpenAI Codex CLI - AI coding assistant",
    "category": "ai-assistant",
    "homepage": "https://openai.com"
  }
}
