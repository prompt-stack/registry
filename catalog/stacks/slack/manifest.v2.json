{
  "id": "stack:slack",
  "kind": "stack",
  "name": "Slack",
  "version": "1.0.0",

  "delivery": "remote",
  "install": {
    "source": "catalog",
    "path": "catalog/stacks/slack"
  },

  "runtime": "node",
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "key": "SLACK_BOT_TOKEN",
        "label": "Slack Bot Token",
        "required": true,
        "helpUrl": "https://api.slack.com/apps"
      },
      {
        "key": "SLACK_CHANNEL_ID",
        "label": "Default Channel ID",
        "required": false
      }
    ]
  },
  "provides": {
    "tools": [
      "slack_send_message",
      "slack_list_channels",
      "slack_read_channel",
      "slack_search",
      "slack_update_message",
      "slack_add_reaction",
      "slack_upload_file",
      "slack_get_user"
    ]
  },
  "mcp": {
    "transport": "stdio",
    "command": "npx",
    "args": ["tsx", "node/src/index.ts"],
    "cwd": "."
  },

  "meta": {
    "description": "Send messages, search channels, upload files, and manage reactions in Slack",
    "author": "CO-LLAB",
    "license": "MIT",
    "category": "communication",
    "tags": ["slack", "messaging", "chat", "team"],
    "icon": "ðŸ’¬"
  }
}
