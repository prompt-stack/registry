{
  "id": "notion-workspace",
  "name": "Notion Workspace",
  "version": "1.2.0",
  "description": "Search, create, and manage Notion pages and databases",
  "runtime": "node",
  "command": [
    "node",
    "dist/index.js"
  ],
  "provides": {
    "tools": [
      "notion_search",
      "notion_get_page",
      "notion_get_page_content",
      "notion_create_page",
      "notion_append_content",
      "notion_delete_page",
      "notion_list_databases",
      "notion_query_database",
      "notion_create_database",
      "notion_add_database_row",
      "notion_db_list",
      "notion_db_add",
      "notion_db_remove",
      "notion_batch_add_rows",
      "notion_update_row",
      "notion_get_database_schema",
      "notion_search_all_databases",
      "notion_duplicate_page",
      "notion_add_block",
      "notion_move_page",
      "notion_update_page_properties",
      "notion_get_page_tree"
    ]
  },
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "description": "Internal integration token from Notion",
        "label": "Notion Integration Token",
        "link": "https://www.notion.so/my-integrations",
        "name": "NOTION_API_KEY"
      }
    ]
  },
  "meta": {
    "author": "CO-LLAB",
    "license": "MIT",
    "category": "productivity",
    "tags": [
      "notion",
      "productivity",
      "notes",
      "databases",
      "wiki"
    ],
    "icon": "üìù"
  }
}
