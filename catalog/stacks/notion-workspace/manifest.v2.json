{
  "id": "stack:notion-workspace",
  "kind": "stack",
  "name": "Notion Workspace",
  "version": "1.2.0",

  "delivery": "remote",
  "install": {
    "source": "catalog",
    "path": "catalog/stacks/notion-workspace"
  },

  "runtime": "node",
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "key": "NOTION_API_KEY",
        "label": "Notion API Key",
        "required": true,
        "helpUrl": "https://www.notion.so/my-integrations"
      }
    ]
  },
  "provides": {
    "tools": [
      "notion_search",
      "notion_get_page",
      "notion_get_page_content",
      "notion_create_page",
      "notion_append_content",
      "notion_delete_page",
      "notion_list_databases",
      "notion_query_database",
      "notion_create_database",
      "notion_add_database_row"
    ]
  },
  "mcp": {
    "transport": "stdio",
    "command": "npx",
    "args": ["tsx", "src/index.ts"],
    "cwd": "."
  },

  "meta": {
    "description": "Search, create, and manage Notion pages and databases",
    "author": "CO-LLAB",
    "license": "MIT",
    "category": "productivity",
    "tags": ["notion", "pages", "databases", "workspace"],
    "icon": "üìù"
  }
}
