{
  "id": "pdf-creator",
  "name": "PDF Creator",
  "version": "1.0.0",
  "description": "Convert HTML files to PDF documents",
  "author": "Spacely Studio",
  "license": "MIT",
  "runtime": "python",
  "entrypoint": "create_pdf.py",
  "inputs": [
    {
      "name": "input_file",
      "type": "file",
      "description": "HTML file to convert",
      "required": true
    },
    {
      "name": "output_file",
      "type": "string",
      "description": "Output PDF filename",
      "required": false,
      "default": "output.pdf"
    }
  ],
  "outputs": [
    {
      "name": "pdf_path",
      "type": "file",
      "description": "Path to generated PDF"
    }
  ],
  "dependencies": {
    "python": ["pdfkit", "jinja2"]
  },
  "tags": ["pdf", "conversion", "html"],
  "category": "document-processing",
  "icon": "ðŸ“„"
}
