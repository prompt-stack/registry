{
  "id": "stack:finance",
  "kind": "stack",
  "name": "Finance",
  "version": "1.0.0",

  "delivery": "remote",
  "install": {
    "source": "catalog",
    "path": "catalog/stacks/finance"
  },

  "runtime": "python",
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "key": "ALPHA_VANTAGE_API_KEY",
        "label": "Alpha Vantage API Key",
        "required": false,
        "helpUrl": "https://www.alphavantage.co/support/#api-key"
      }
    ]
  },
  "provides": {
    "tools": [
      "finance_stock_quote",
      "finance_stock_history",
      "finance_crypto_price",
      "finance_crypto_history",
      "finance_company_info",
      "finance_financials",
      "finance_news",
      "finance_portfolio_value",
      "finance_calculate_returns",
      "finance_chart"
    ]
  },
  "mcp": {
    "transport": "stdio",
    "command": "python",
    "args": ["src/server.py"],
    "cwd": "."
  },

  "meta": {
    "description": "Stock market data, crypto prices, financial analysis, and portfolio tracking",
    "author": "RUDI",
    "license": "MIT",
    "category": "finance",
    "tags": ["stocks", "crypto", "finance", "market", "portfolio"],
    "icon": "ðŸ’¹"
  }
}
