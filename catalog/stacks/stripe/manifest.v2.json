{
  "id": "stack:stripe",
  "kind": "stack",
  "name": "Stripe",
  "version": "1.0.0",

  "delivery": "remote",
  "install": {
    "source": "catalog",
    "path": "catalog/stacks/stripe"
  },

  "runtime": "node",
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "key": "STRIPE_API_KEY",
        "label": "Stripe Secret Key",
        "required": true,
        "helpUrl": "https://dashboard.stripe.com/apikeys"
      }
    ]
  },
  "provides": {
    "tools": [
      "stripe_list_customers",
      "stripe_get_customer",
      "stripe_create_customer",
      "stripe_list_invoices",
      "stripe_get_invoice",
      "stripe_create_invoice",
      "stripe_list_subscriptions",
      "stripe_get_subscription",
      "stripe_list_payments",
      "stripe_get_balance"
    ]
  },
  "mcp": {
    "transport": "stdio",
    "command": "node",
    "args": ["dist/index.js"],
    "cwd": "."
  },

  "meta": {
    "description": "Manage Stripe payments, customers, invoices, and subscriptions",
    "author": "RUDI",
    "license": "MIT",
    "category": "business",
    "tags": ["stripe", "payments", "invoices", "subscriptions", "billing"],
    "icon": "ðŸ’³"
  }
}
