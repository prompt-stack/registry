{
  "id": "stripe",
  "name": "Stripe",
  "version": "1.0.0",
  "description": "Manage Stripe payments, customers, invoices, and subscriptions",
  "runtime": "node",
  "command": ["node", "dist/index.js"],
  "provides": {
    "tools": [
      "stripe_list_customers",
      "stripe_get_customer",
      "stripe_create_customer",
      "stripe_list_invoices",
      "stripe_get_invoice",
      "stripe_create_invoice",
      "stripe_list_subscriptions",
      "stripe_get_subscription",
      "stripe_list_payments",
      "stripe_get_balance"
    ]
  },
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "name": "STRIPE_API_KEY",
        "label": "Stripe Secret Key",
        "description": "Secret key from Stripe Dashboard (sk_...)",
        "link": "https://dashboard.stripe.com/apikeys",
        "required": true
      }
    ]
  },
  "meta": {
    "author": "RUDI",
    "license": "MIT",
    "category": "business",
    "tags": ["stripe", "payments", "invoices", "subscriptions", "billing"],
    "icon": "ðŸ’³"
  }
}
