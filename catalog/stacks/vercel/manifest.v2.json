{
  "id": "stack:vercel",
  "kind": "stack",
  "name": "Vercel",
  "version": "1.0.0",

  "delivery": "remote",
  "install": {
    "source": "catalog",
    "path": "catalog/stacks/vercel"
  },

  "runtime": "node",
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "key": "VERCEL_TOKEN",
        "label": "Vercel API Token",
        "required": true,
        "helpUrl": "https://vercel.com/account/tokens"
      },
      {
        "key": "VERCEL_ORG_ID",
        "label": "Vercel Organization ID",
        "required": false,
        "helpUrl": "https://vercel.com/account/settings"
      }
    ]
  },
  "provides": {
    "tools": [
      "vercel_list_projects",
      "vercel_get_project",
      "vercel_set_env_variable",
      "vercel_get_env_variables",
      "vercel_remove_env_variable",
      "vercel_list_deployments",
      "vercel_get_deployment",
      "vercel_deploy",
      "vercel_promote_deployment",
      "vercel_get_logs",
      "vercel_list_domains"
    ]
  },
  "mcp": {
    "transport": "stdio",
    "command": "npx",
    "args": ["tsx", "src/index.ts"],
    "cwd": "."
  },

  "meta": {
    "description": "Deploy to Vercel, manage environment variables, and monitor deployments",
    "author": "RUDI",
    "license": "MIT",
    "category": "deployment",
    "tags": ["vercel", "deployment", "serverless", "hosting"],
    "icon": "âš¡"
  }
}
