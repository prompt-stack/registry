{
  "id": "stack:sqlite",
  "kind": "stack",
  "name": "SQLite",
  "version": "1.0.0",

  "delivery": "remote",
  "install": {
    "source": "catalog",
    "path": "catalog/stacks/sqlite"
  },

  "runtime": "node",
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "key": "SQLITE_DB_PATH",
        "label": "Database Path",
        "required": true
      }
    ]
  },
  "provides": {
    "tools": ["sqlite_query", "sqlite_execute", "sqlite_list_tables", "sqlite_describe_table", "sqlite_schema"]
  },
  "mcp": {
    "transport": "stdio",
    "command": "npx",
    "args": ["tsx", "src/index.ts"],
    "cwd": "."
  },

  "meta": {
    "description": "Query and manage SQLite databases. Perfect for local databases, app data, and the RUDI session database.",
    "author": "RUDI",
    "license": "MIT",
    "category": "data",
    "tags": ["sqlite", "database", "sql", "local"],
    "icon": "ðŸ“Š"
  }
}
