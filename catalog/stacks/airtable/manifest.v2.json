{
  "id": "stack:airtable",
  "kind": "stack",
  "name": "Airtable",
  "version": "1.0.0",

  "delivery": "remote",
  "install": {
    "source": "catalog",
    "path": "catalog/stacks/airtable"
  },

  "runtime": "node",
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "key": "AIRTABLE_API_KEY",
        "label": "Airtable API Key",
        "required": true,
        "helpUrl": "https://airtable.com/create/tokens"
      }
    ]
  },
  "provides": {
    "tools": [
      "airtable_list_bases",
      "airtable_list_tables",
      "airtable_list_records",
      "airtable_get_record",
      "airtable_create_record",
      "airtable_update_record",
      "airtable_delete_record",
      "airtable_search"
    ]
  },
  "mcp": {
    "transport": "stdio",
    "command": "node",
    "args": ["dist/index.js"],
    "cwd": "."
  },

  "meta": {
    "description": "Query and manage Airtable bases, tables, and records",
    "author": "RUDI",
    "license": "MIT",
    "category": "productivity",
    "tags": ["airtable", "database", "spreadsheet", "no-code"],
    "icon": "ðŸ“Š"
  }
}
