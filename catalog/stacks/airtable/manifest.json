{
  "id": "airtable",
  "name": "Airtable",
  "version": "1.0.0",
  "description": "Query and manage Airtable bases, tables, and records",
  "runtime": "node",
  "command": ["node", "dist/index.js"],
  "provides": {
    "tools": [
      "airtable_list_bases",
      "airtable_list_tables",
      "airtable_list_records",
      "airtable_get_record",
      "airtable_create_record",
      "airtable_update_record",
      "airtable_delete_record",
      "airtable_search"
    ]
  },
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "name": "AIRTABLE_API_KEY",
        "label": "Airtable API Key",
        "description": "Personal access token from Airtable",
        "link": "https://airtable.com/create/tokens",
        "required": true
      }
    ]
  },
  "meta": {
    "author": "RUDI",
    "license": "MIT",
    "category": "productivity",
    "tags": ["airtable", "database", "spreadsheet", "no-code"],
    "icon": "ðŸ“Š"
  }
}
