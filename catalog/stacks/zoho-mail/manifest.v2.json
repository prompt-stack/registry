{
  "id": "stack:zoho-mail",
  "kind": "stack",
  "name": "Zoho Mail",
  "version": "1.0.0",

  "delivery": "remote",
  "install": {
    "source": "catalog",
    "path": "catalog/stacks/zoho-mail"
  },

  "runtime": "node",
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "key": "ZOHO_CLIENT_ID",
        "label": "Zoho Client ID",
        "required": true,
        "helpUrl": "https://api-console.zoho.com/"
      },
      {
        "key": "ZOHO_CLIENT_SECRET",
        "label": "Zoho Client Secret",
        "required": true
      }
    ]
  },
  "provides": {
    "tools": ["zoho_send_email", "zoho_list_emails", "zoho_get_email", "zoho_search_email", "zoho_list_folders", "zoho_create_draft"]
  },
  "mcp": {
    "transport": "stdio",
    "command": "npx",
    "args": ["tsx", "src/index.ts"],
    "cwd": "."
  },

  "meta": {
    "description": "Send, search, and manage emails via Zoho Mail",
    "author": "CO-LLAB",
    "license": "MIT",
    "category": "productivity",
    "tags": ["zoho", "email", "mail"],
    "icon": "ðŸ“¬"
  }
}
