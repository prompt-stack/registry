{
  "id": "stack:postgres",
  "kind": "stack",
  "name": "PostgreSQL",
  "version": "1.0.0",

  "delivery": "remote",
  "install": {
    "source": "catalog",
    "path": "catalog/stacks/postgres"
  },

  "runtime": "node",
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "key": "DATABASE_URL",
        "label": "Database URL",
        "required": true,
        "helpUrl": "https://neon.tech/docs/connect/connection-string"
      }
    ]
  },
  "provides": {
    "tools": ["pg_query", "pg_execute", "pg_list_tables", "pg_describe_table", "pg_list_schemas"]
  },
  "mcp": {
    "transport": "stdio",
    "command": "npx",
    "args": ["tsx", "src/index.ts"],
    "cwd": "."
  },

  "meta": {
    "description": "Query and manage PostgreSQL databases. Works with Neon, Railway, Supabase, and any PostgreSQL connection.",
    "author": "RUDI",
    "license": "MIT",
    "category": "data",
    "tags": ["postgres", "postgresql", "database", "sql"],
    "icon": "üêò"
  }
}
