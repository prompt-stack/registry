{
  "id": "react-app-builder",
  "name": "React App Builder",
  "version": "1.0.0",
  "description": "Create and bundle React apps with TypeScript, Tailwind CSS, and shadcn/ui. Outputs a single portable HTML file.",
  "runtime": "shell",
  "command": [
    "bash",
    "scripts/init-artifact.sh"
  ],
  "provides": {
    "tools": []
  },
  "requires": {
    "binaries": [],
    "secrets": []
  },
  "meta": {
    "author": "Prompt Stack",
    "license": "MIT",
    "category": "frontend",
    "tags": [
      "react",
      "tailwind",
      "shadcn",
      "frontend",
      "html",
      "bundle"
    ],
    "icon": "⚛️"
  },
  "inputs": [
    {
      "name": "project_name",
      "type": "string",
      "description": "Name for the new React project",
      "required": true
    }
  ],
  "outputs": [
    {
      "name": "project_path",
      "type": "string",
      "description": "Path to the created project"
    },
    {
      "name": "bundle_path",
      "type": "string",
      "description": "Path to the bundled HTML file (after running bundle script)"
    }
  ],
  "scripts": {
    "init": "scripts/init-artifact.sh",
    "bundle": "scripts/bundle-artifact.sh"
  }
}
