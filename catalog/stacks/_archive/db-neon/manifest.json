{
  "id": "db-neon",
  "name": "Neon Database",
  "version": "1.0.0",
  "description": "Create serverless Postgres databases on Neon. Returns a DATABASE_URL connection string ready to use.",
  "runtime": "node",
  "command": [
    "node",
    "create-db.js"
  ],
  "provides": {
    "tools": []
  },
  "requires": {
    "binaries": [],
    "secrets": [
      {
        "description": "API key for creating serverless Postgres databases",
        "label": "Neon API Key",
        "link": "https://console.neon.tech/app/settings/api-keys",
        "name": "NEON_API_KEY"
      }
    ]
  },
  "meta": {
    "author": "Prompt Stack",
    "license": "MIT",
    "category": "database",
    "tags": [
      "database",
      "postgres",
      "neon",
      "serverless"
    ],
    "icon": "üêò"
  },
  "inputs": [
    {
      "name": "name",
      "type": "string",
      "description": "Name for the database project (e.g., 'my-app-db')",
      "required": true
    },
    {
      "name": "region",
      "type": "string",
      "description": "Region for the database (aws-us-east-1, aws-us-west-2, aws-eu-central-1). Default: aws-us-east-1",
      "required": false,
      "default": "aws-us-east-1"
    },
    {
      "name": "write_env",
      "type": "string",
      "description": "Path to .env file to write DATABASE_URL (optional)",
      "required": false
    }
  ],
  "outputs": [
    {
      "name": "connection_uri",
      "type": "string",
      "description": "PostgreSQL connection string (DATABASE_URL)"
    },
    {
      "name": "project_id",
      "type": "string",
      "description": "Neon project ID"
    },
    {
      "name": "host",
      "type": "string",
      "description": "Database host"
    }
  ]
}
